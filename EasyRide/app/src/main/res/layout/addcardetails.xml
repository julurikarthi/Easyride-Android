<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/color_primary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Year"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"></TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/yearsspinnerframe"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dialog"
                        android:visibility="visible"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignRight="@+id/yearsspinnerframe"
                        android:src="@drawable/downarrow">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Make"
                    android:textSize="10dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"></TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/makespinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dialog"
                        android:visibility="visible"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignRight="@+id/makespinner"
                        android:src="@drawable/downarrow">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Model"
                    android:textSize="10dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"></TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/modelspinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dialog"
                        android:visibility="visible"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignRight="@+id/modelspinner"
                        android:src="@drawable/downarrow">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Color"
                    android:textSize="10dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"></TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/colorspinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dialog"
                        android:visibility="visible"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignRight="@+id/colorspinner"
                        android:src="@drawable/downarrow">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Doors"
                    android:textSize="10dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"></TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/doorsspinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dialog"
                        android:visibility="visible"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignRight="@+id/doorsspinner"
                        android:src="@drawable/downarrow">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="#3C3C43"
                android:layout_marginTop="20dp"
                android:paddingLeft="4dp"
                android:padding="10dp"
                android:id="@+id/carNumber"
                android:background="@drawable/rounded_edittext_bg"
                android:textSize="15dp"
                android:hint="Enter Car Number"></EditText>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/logoIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundedbtn_background"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:id="@+id/savebtn"
                android:singleLine="true"
                android:text="Save and Continue"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:textStyle="bold"></Button>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addcarprogressview"
        android:visibility="gone"
        android:indeterminateTint="@color/white"
        android:layout_centerInParent="true"
        ></ProgressBar>
</RelativeLayout>