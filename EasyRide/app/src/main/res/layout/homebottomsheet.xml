<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/roundedcornorbg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_primary"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/closebtn_dailog"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/closebtnactive"></ImageView>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:padding="10dp"
            android:id="@+id/onlinebtn"
            android:orientation="vertical"
            android:background="@drawable/roundedwhite_bg">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/steeringwheel"></ImageView>
               <TextView
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:textSize="20dp"
                   android:layout_marginTop="5dp"
                   android:gravity="center"
                   android:layout_marginRight="10dp"
                   android:fontFamily="@font/roboto_bold"
                   android:text="Go online"/>
           </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="13dp"
                android:layout_marginTop="4dp"
                android:text="Connect with Riders"></TextView>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>