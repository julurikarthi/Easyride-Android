<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary">

<ImageView
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/logoIcon"
    android:src="@drawable/easyrideicon"></ImageView>

   <TextView
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:layout_below="@+id/logoIcon"
       android:layout_centerHorizontal="true"
       android:layout_marginStart="25dp"
       android:layout_marginTop="95dp"
       android:background="@drawable/roundedgetstarted_background"
       android:layout_marginBottom="25dp"
       android:fontFamily="@font/roboto_bold"
       android:gravity="center"
       android:id="@+id/genstartedbtn"
       android:text="Get started"
       android:textColor="@color/color_primary"
       android:textSize="20dp"
       android:textStyle="bold"></TextView>
   <TextView
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:textColor="@color/white"
       android:gravity="center"
       android:fontFamily="@font/roboto_regular"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/genstartedbtn"
       android:text="Ready to earn? signup as a Driver"/>

</RelativeLayout>