<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/color_primary">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:textSize="20dp"
           android:layout_marginTop="10dp"
           android:fontFamily="@font/roboto_medium"
           android:text="Check your texts for the secret code">
       </TextView>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:textSize="10dp"
           android:layout_marginTop="10dp"
           android:fontFamily="@font/roboto_regular"
           android:text="To confirm your number, enter the code">
       </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext_bg_otp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FEFEFE"
                android:padding="5dp"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:text="Enter 4-digit code"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:phoneNumber="true"
                android:id="@+id/otpedittext"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:background="@null"
                ></EditText>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BCB4FE"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="10dp"
            android:text="Retry OTP"></TextView>

       <TextView
           android:layout_width="fill_parent"
           android:layout_height="50dp"
           android:layout_below="@+id/logoIcon"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:background="@drawable/roundedbtn_background"
           android:layout_marginBottom="25dp"
           android:fontFamily="@font/roboto_regular"
           android:gravity="center"
           android:id="@+id/otpnext"
           android:text="Next"
           android:textColor="@color/black"
           android:textSize="18dp"
           android:textStyle="bold"></TextView>
   </LinearLayout>

</LinearLayout>